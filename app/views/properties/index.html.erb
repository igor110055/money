    <td colspan="7" class="thead"><%= t(:total_properties_amount) %>ï¼š<span id="properties_net_value_twd"><%= @properties_net_value_twd.to_i %></span> <%= t(:twd) %> (<span id="properties_net_value_cny"><%= @properties_net_value_cny.to_i %></span> <%= t(:cny) %>)</td>
  </tr>
</table>
