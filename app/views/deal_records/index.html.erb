<h2><%= t(:deal_record_index) %></h2>
<table>
  <tr class="thead">
    <td width="15"></td>
    <td><%= t(:deal_record_account) %></td>
    <td><%= t(:deal_record_data_id) %></td>
    <td><%= t(:deal_record_symbol) %></td>
    <td><%= t(:deal_record_deal_type) %></td>
    <td><%= t(:deal_record_price) %></td>
    <td><%= t(:deal_record_amount) %></td>
    <td><%= t(:deal_record_fees) %></td>
    <td><%= t(:exchange_to_cny) %></td>
    <td><%= t(:now_to_cny) %></td>
    <td><%= t(:earn_or_loss) %></td>
    <td><%= t(:deal_record_purpose) %></td>
    <td><%= t(:deal_record_earn_short) %></td>
    <td><%= t(:deal_record_loss_short) %></td>
  </tr>
<% n = 1 %>
<% @deal_records.each do |deal_record| %>
  <tr <%= change_row_color %>>
    <td align="right"><%= n %></td>
    <td align="center"><%= deal_record.account %></td>
    <td><%= link_edit_to(deal_record,deal_record.data_id) %></td>
    <td align="center"><%= deal_record.bi %></td>
    <td align="center"><%= show_deal_type(deal_record.deal_type) %></td>
    <td align="right"><%= to_n(deal_record.price) %></td>
    <td align="right"><%= to_n(deal_record.amount,6) %></td>
    <td align="right"><%= to_n(deal_record.fees,6) %></td>
    <td align="right"><%= to_n(deal_record.cny_amount,1) %></td>
    <td align="right"><%= deal_record.cny_amount_now %></td>
    <td align="right"><%= deal_record.earn_or_loss %></td>
    <td align="left"><%= deal_record.purpose %></td>
    <td align="right"><%= deal_record.earn_limit %></td>
    <td align="right"><%= deal_record.loss_limit %></td>
  </tr>
  <% n += 1 %>
<% end %>
  <tr>
    <td colspan="14" class="thead"></td>
  </tr>
</table>
<br/>
<%= link_back_to_portfolios %>
| <%= link_to t(:new_deal_record), new_deal_record_path, { id: 'add_new_deal_record' } %>
