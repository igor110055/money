<%= render 'shared/error_messages', object: @interest %>

<%= form_for(@interest) do |f| %>
<table>
  <tr><td colspan="2" class="thead"></td></tr>
  <tr>
    <td><%= t(:property_name) %>：</td>
    <td><%= f.select :property_id, Property.all.collect { |p| [ p.name, p.id ] } %></td>
  </tr>
  <tr>
    <td><%= t(:interest_start_date) %>：</td>
    <td><%= f.text_field(:start_date, onclick: select_all) %></td>
  </tr>
  <tr>
    <td><%= t(:interest_rate) %>：</td>
    <td><%= f.text_field(:rate, onclick: select_all) %></td>
  </tr>
  <tr>
    <td colspan="2" align="right" class="tfoot">
      <%= f.submit( submit,id: submit_id) %>
    </td>
  </tr>
</table>
<% end %>
<br/>
<%= link_back_to_interests %>
<% if !@interest.new_record? %>
  | <%= link_to t(:delete_interest), @interest, method: :delete, id: 'delete_interest', data: { confirm: t(:delete_interest_confirm) } %>
<% end %>
